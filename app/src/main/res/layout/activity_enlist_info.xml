<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/activity_header"/>

        <ImageView
            android:id="@+id/enlist_info_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="@dimen/ui_10_dip"
            android:layout_marginTop="@dimen/ui_10_dip"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:paddingStart="@dimen/ui_10_dip">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/enlist_info_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月下扒啪" />
                <TextView
                    android:id="@+id/enlist_info_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="28岁"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID:" />

                <TextView
                    android:id="@+id/enlist_info_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="154641064" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="工作生活在" />

                <!--<TextView-->
                    <!--android:id="@+id/enlist_info_province"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="20dp"-->
                    <!--android:text="山东"/>-->

                <TextView
                    android:id="@+id/enlist_info_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="城市"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="|"/>
                <TextView
                    android:id="@+id/enlist_info_job"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="设计"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/dividerColor" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_enlist_photos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/ui_10_dip"/>
    </LinearLayout>
    <TextView
        android:id="@+id/enlist_info_bt_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/theme_color_3dp_bg"
        android:gravity="center"
        android:paddingBottom="@dimen/ui_10_dip"
        android:paddingTop="@dimen/ui_10_dip"
        android:layout_margin="@dimen/ui_10_dip"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="聊天"/>
    <ProgressBar
        android:id="@+id/enlist_info_pb"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>