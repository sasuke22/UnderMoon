<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/dividerColor">

    <include
        android:id="@+id/rest_header"
        layout="@layout/activity_header"/>

    <RelativeLayout
        android:id="@+id/rl_rest_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@id/rest_header"
        android:layout_marginTop="@dimen/ui_10_dip"
        android:padding="@dimen/ui_10_dip">

        <TextView
            android:id="@+id/rest_yue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/chocolate"
            android:layout_centerInParent="true"
            android:textSize="30sp"
            android:text="0.00元"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_toStartOf="@id/rest_yue"
            android:layout_alignBottom="@id/rest_yue"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:text="余额"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_add_money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_rest_money">

        <TextView
            android:id="@+id/tv_chongzhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_margin="@dimen/ui_10_dip"
            android:textSize="15sp"
            android:text="充值"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_chongzhi"
            android:layout_toEndOf="@id/tv_chongzhi"
            android:textColor="@color/red"
            android:text="充值金额不可提现"/>

        <RadioGroup
            android:id="@+id/rg_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_chongzhi"
            android:padding="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/thirty_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/rb_style"
                android:text="30元"/>

            <RadioButton
                android:id="@+id/fifty_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ui_10_dip"
                style="@style/rb_style"
                android:text="50元"/>

            <RadioButton
                android:id="@+id/hundred_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ui_10_dip"
                style="@style/rb_style"
                android:text="100元"/>
        </RadioGroup>

        <RadioGroup
            android:id="@+id/rg_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rg_first"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/two_hundred_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/rb_style"
                android:text="200元"/>

            <RadioButton
                android:id="@+id/five_hundred_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ui_10_dip"
                style="@style/rb_style"
                android:text="500元"/>

            <RadioButton
                android:id="@+id/thousand_rmb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/ui_10_dip"
                style="@style/rb_style"
                android:text="1000元"/>
        </RadioGroup>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/wallet_tv_bg_uncheck"
            android:layout_below="@id/rg_second"
            android:layout_margin="@dimen/ui_10_dip"
            android:paddingTop="@dimen/ui_10_dip"
            android:paddingBottom="@dimen/ui_10_dip"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/tv_yuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textColor="@color/black"
                android:text="元"/>

            <EditText
                android:id="@+id/et_input_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/tv_yuan"
                android:inputType="number"
                android:textColorHint="@color/gray"
                android:hint="手动输入充值金额"
                android:background="@null"/>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_pay_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/ui_10_dip"
        android:layout_marginTop="@dimen/ui_10_dip"
        android:layout_below="@id/rl_add_money"
        android:text="支付方式"/>

    <com.test.jwj.underMoon.CustomView.ItemLayout
        android:id="@+id/rest_alipay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemImage="@mipmap/alipay_logo"
        android:layout_below="@id/tv_pay_way"
        android:layout_marginTop="5dp"
        app:itemName="支付宝"
        />

    <com.test.jwj.underMoon.CustomView.ItemLayout
        android:layout_marginTop="1dp"
        android:id="@+id/rest_wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemImage="@mipmap/wechat_logo"
        android:layout_below="@id/rest_alipay"
        app:itemName="微信"
        />

    <TextView
        android:id="@+id/rest_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_btn"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/ui_10_dip"
        android:layout_margin="@dimen/ui_10_dip"
        android:gravity="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="支付 100.00元"/>
</RelativeLayout>